<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login.LoginActivity">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp" app:srcCompat="@drawable/ic_discover_people"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/tvProfilPhoto"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="52dp"
            android:tint="@color/golgelik"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="457dp"
            tools:ignore="VectorDrawableCompat"/>
    <TextView
            android:text="TELEFON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTelefon" android:textSize="18sp"
            android:textStyle="bold" android:textColor="@color/siyah" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvProfilPhoto" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"/>
    <TextView
            android:text="E-POSTA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:textSize="18sp"
            android:textStyle="bold" android:textColor="@color/siyah" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="70dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvProfilPhoto"/>
</android.support.constraint.ConstraintLayout>
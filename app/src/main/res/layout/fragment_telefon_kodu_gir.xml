<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"

             tools:context=".Login.TelefonKoduGirFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
            android:text="ONAY KODUNU GİR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView8" android:textColor="@color/siyah" android:textStyle="bold"
             android:layout_marginTop="65dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="575dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Şu numaraya gönderdiğiniz 6 haneli kodu giriniz."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="63dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvKullaniciTelNo" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/siyah" android:text="123456"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/register_edit_text"
            android:padding="16dp"
            android:inputType="number"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/etOnayKodu" android:hint="Onay Kodu "
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvKullaniciTelNo"/>
    <Button
            android:text="ileri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/register_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnTelKodIleri" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/etOnayKodu"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pbTelNoOnayla"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="182dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="181dp" android:layout_marginTop="147dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTelKodIleri" android:layout_marginBottom="169dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>